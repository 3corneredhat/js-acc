<%- include('../partials/header'); %>
    <div class="container-fluid pt-5 pb-5" id="results">
      <div class="row row-cols-1 row-cols-md-3 g-4 justify-content-center">
      <%data.forEach(el => { %> 
        <div class="card my-3 mx-3 " style="max-width: 400px;">
          <div class="row g-0">
            <div class="col-md-4 ">
              <img src= <%= el.poster_path === null ? "images/error.gif" : `https://www.themoviedb.org/t/p/w1280${el.poster_path}`%> class="img-fluid rounded-start pt-5">
            </div>
            <div class="col-md-8">
              <div class="card-body">
                <h5 class="card-title"><%= el.original_title %></h5>
                <p class="card-text"><%= el.overview %></p>
                <p class="card-footer bg-transparent"><small class="text-body-secondary">Rating: <%= el.vote_average %></small></p>
              </div>
            </div>
          </div>
        </div>
      <% }); %> 

    </div>
  </div>
<%- include('../partials/footer'); %>